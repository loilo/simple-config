{
    "name": "loilo/simple-config",
    "description": "Simple persistent configuration for your app or module",
    "type": "library",
    "require": {
        "php": ">= 7.1",
        "ext-json": "*",
        "loilo/x-filesystem": "^1.0",
        "loilo/find-up": "^1.0",
        "loilo/storage-paths": "^1.0",
        "loilo/traceback": "^1.0",
        "webmozart/path-util": "^2.3",
        "justinrainbow/json-schema": "^5.2",
        "adbario/php-dot-notation": "^2.2",
        "symfony/var-dumper": "^4.3",
        "symfony/yaml": "^4.3",
        "defuse/php-encryption": "^2.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "Loilo\\SimpleConfig\\": "src/"
        }
    },
